{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@tlc-base/*": ["projects/tlc-base/*"],
      "@tlc-components/*": ["projects/tlc-components-mobile/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "projects/**/*.ts",
    "projects/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "cypress",
    "cypress.config.js",
    "**/*.cy.tsx",
    "**/*.cy.ts"
  ]
}
